{
  "name": "@rs485-homenet/core",
  "version": "2.6.5",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./dist/*": "./dist/*"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json && pnpm schema:generate",
    "build:simple": "tsc -p tsconfig.json && pnpm schema:generate",
    "dev": "tsc -w -p tsconfig.json",
    "lint": "tsc --noEmit -p tsconfig.json",
    "format": "prettier --config ../../prettier.config.cjs --ignore-path ../../.prettierignore --write .",
    "test": "vitest run --root ../..",
    "schema:generate": "npx tsx scripts/generate-schema.ts"
  },
  "dependencies": {
    "@marcbachmann/cel-js": "^6.3.4",
    "aromanize": "^0.1.5",
    "cron-parser": "^4.9.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "mqtt": "^5.3.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "typescript-json-schema": "^0.67.1"
  }
}
