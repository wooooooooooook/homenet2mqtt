{
  "name": "@rs485-homenet/service",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "pnpm --filter @rs485-homenet/ui build && node ../../scripts/sync-ui-static.mjs && tsc -p tsconfig.json",
    "dev": "pnpm --filter @rs485-homenet/core build && tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "tsc --noEmit -p tsconfig.json",
    "format": "prettier --config ../../prettier.config.cjs --ignore-path ../../.prettierignore --write .",
    "test": "vitest run --root ../.."
  },
  "dependencies": {
    "@rs485-homenet/core": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "mqtt": "^5.3.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
