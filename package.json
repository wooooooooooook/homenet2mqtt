{
  "name": "rs485-homenet-to-mqtt-bridge",
  "private": true,
  "version": "2.6.5",
  "packageManager": "pnpm@10.18.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "core:dev": "pnpm --filter @rs485-homenet/core dev",
    "service:dev": "pnpm --filter @rs485-homenet/service dev",
    "ui:dev": "pnpm --filter @rs485-homenet/ui dev",
    "core:build": "pnpm --filter @rs485-homenet/core build",
    "service:build": "pnpm --filter @rs485-homenet/service build",
    "ui:build": "pnpm --filter @rs485-homenet/ui build",
    "dev:up": "docker compose -f deploy/docker/docker-compose.dev.yml up -d --build app simulator",
    "dev:down": "docker compose -f deploy/docker/docker-compose.dev.yml rm -s -f app simulator",
    "dev:up:all": "docker compose -f deploy/docker/docker-compose.dev.yml up -d",
    "dev:down:all": "docker compose -f deploy/docker/docker-compose.dev.yml down",
    "dev:logs": "docker compose -f deploy/docker/docker-compose.dev.yml logs -f",
    "dev:restart": "pnpm dev:down && pnpm dev:up",
    "dev:restart:app": "docker compose -f deploy/docker/docker-compose.dev.yml restart app",
    "dev:restart:ui": "docker compose -f deploy/docker/docker-compose.dev.yml restart ui",
    "dev:backend": "docker compose -f deploy/docker/docker-compose.dev.yml up -d app mq simulator",
    "dev:frontend": "pnpm --filter @rs485-homenet/ui dev",
    "schema:build": "pnpm --filter @rs485-homenet/core schema:generate",
    "simulate": "node packages/simulator/scripts/convert_trace.js",
    "lint": "turbo lint",
    "build": "turbo build --filter=@rs485-homenet/service...",
    "build:simulator": "pnpm --filter @rs485-homenet/simulator build",
    "format": "pnpm -r --if-present format",
    "test": "turbo test",
    "clean": "sudo bash ./scripts/clean.sh",
    "deploy-addon": "bash deploy/deploy-addon.sh",
    "sync-addon": "bash deploy/sync-addon-repo.sh"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.7",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.6",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
